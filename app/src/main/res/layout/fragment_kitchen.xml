<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:background="#90ffffff"
    tools:context=".Room.KitchenFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="4dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="250dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="280dp">
            <com.sdsmdg.harjot.crollerTest.Croller
                android:id="@+id/croller_kitchen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:back_circle_color="#EDEDED"
                app:indicator_color="#0B3C49"
                app:indicator_width="10"
                app:is_continuous="true"
                app:label_color="#000000"
                app:label_size="42"
                app:main_circle_color="#FFFFFF"
                app:max="1000"
                app:progress_primary_color="#0B3C49"
                app:progress_secondary_color="#EEEEEE"
                app:start_offset="45" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="42sp"
                android:id="@+id/tv_temp_kitchen"
                android:textColor="#0B3C49"
                android:text="25°C"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:layout_gravity="center"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="4"
            android:padding="8dp"
            android:layout_height="wrap_content">
            <android.support.design.widget.FloatingActionButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:padding="6dp"
                app:elevation="4dp"
                android:forceHasOverlappingRendering="true"
                android:id="@+id/power_kitchen"
                android:tint="#0B3C49"
                app:pressedTranslationZ="4dp"
                android:src="@drawable/ic_power_settings_new_black_24dp"
                app:backgroundTint="@color/colorPrimary"
                app:fabSize="normal"/>
            <android.support.design.widget.FloatingActionButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:padding="6dp"
                app:elevation="4dp"
                android:layout_weight="1"
                android:id="@+id/cool_kitchen"
                android:src="@drawable/ic_cool"
                android:tint="#0B3C49"
                app:pressedTranslationZ="4dp"
                app:backgroundTint="@color/colorPrimary"
                app:fabSize="normal"/>
            <android.support.design.widget.FloatingActionButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                app:pressedTranslationZ="4dp"
                android:padding="6dp"
                android:id="@+id/auto_kitchen"
                android:tint="#0B3C49"
                app:elevation="4dp"
                android:src="@drawable/ic_autorenew_black_24dp"
                app:backgroundTint="@color/colorPrimary"
                app:fabSize="normal"/>
            <android.support.design.widget.FloatingActionButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:elevation="4dp"
                app:pressedTranslationZ="4dp"
                android:padding="6dp"
                android:id="@+id/away_kitchen"
                android:tint="#0B3C49"
                android:layout_weight="1"
                android:src="@drawable/ic_out_home"
                app:backgroundTint="@color/colorPrimary"
                app:fabSize="normal"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:weightSum="4">

            <TextView
                android:id="@+id/schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_weight="3.7"
                android:text="Schedule"
                android:textColor="#0B3C49"
                android:textSize="24sp"
                android:textStyle="bold" />
            <com.skyfishjy.library.RippleBackground
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:forceHasOverlappingRendering="true"
                android:id="@+id/ripplekt"
                app:rb_color="#60f83600"
                android:gravity="center"
                app:rb_radius="25dp"
                app:rb_rippleAmount="3"
                app:rb_duration="3000"
                app:rb_scale="1.5">
            <Button
                android:id="@+id/start_kitchen"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="end|center_vertical"
                android:layout_margin="6dp"
                android:layout_weight="0.3"
                android:background="@drawable/btn"
                android:elevation="4dp"
                android:letterSpacing="0.1"
                android:text="apply"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                android:translationZ="4dp"
                />
            </com.skyfishjy.library.RippleBackground>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2"
            android:padding="8dp"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_weight="1"
                app:cardElevation="6dp"
                android:layout_margin="8dp"
                android:id="@+id/day_kitchen"
                app:cardCornerRadius="25dp"
                android:layout_height="150dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/day"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="36sp"
                    android:id="@+id/tv_day_kitchen"
                    android:textColor="#0B3C49"
                    android:text="25°C"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-light"
                    android:layout_gravity="center"/>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_margin="8dp"
                app:cardElevation="6dp"
                android:id="@+id/night_kitchen"
                app:cardCornerRadius="25dp"
                android:layout_height="150dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/night"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="36sp"
                    android:id="@+id/tv_night_kitchen"
                    android:textColor="#FFf"
                    android:text="25°C"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-light"
                    android:layout_gravity="center"/>
            </android.support.v7.widget.CardView>


        </LinearLayout>
    </LinearLayout>
</ScrollView>
